{{#each recipes as |recipe|}}
  <button data-id='{{recipe.id}}' class='recipe-preview recipe-show'>
    <div data-id='{{recipe.id}}' class='form-header flex-space'>
      <h4 data-id='{{recipe.id}}'>{{recipe.name}}</h4>
      <div data-id='{{recipe.id}}' class='preview-buttons'>
        <span data-id='{{recipe.id}}' class='logged-in fav-edit-button'></span>
      </div>
    </div>
    <h6 data-id='{{recipe.id}}'>By: {{recipe.cook.name}}</h6>
    <h6 data-id='{{recipe.id}}'>Favorites: {{recipe.favorites.length}}</h6>
  </button>
{{/each}}
