{{#each recipes as |recipe|}}
  <section class='recipe-preview'>
    <h4 class='recipe-preview-name' data-id='{{recipe.id}}'>{{recipe.name}}</h4>
    <div>
      <span>Favorites: {{recipe.favorites.length}}</span>
      <span class='logged-in fav-edit-button' data-id='{{recipe.id}}'></span>
    </div>
    <h6>By: {{recipe.cook.name}}</h6>
  </section>
{{/each}}
