<div class='overlay-background'>
  <form class='overlay-form recipe-create'>
    <div class='form-header flex-space'>
      <input type="text" name="recipe[name]" placeholder='Recipe Name'>
      <button class='overlay-exit' type='button'>x</button>
    </div>
    <div class='ingredients'>
      {{> ingredient-form}}
    </div>
    <div>
      <button class='ingredient-add' type='button'>+</button>
    </div>
    <div class='steps'>
      {{> step-form}}
    </div>
    <div>
      <button class='step-add' type='button'>+</button>
    </div>
    <input class='form-button' type="submit" value='Publish Recipe'>
    <h6 class='form-message'></h6>
  </form>
</div>
