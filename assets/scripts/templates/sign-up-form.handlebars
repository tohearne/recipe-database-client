<div class='overlay-background'>
  <form class='overlay-form user-sign-up'>
    <div class='form-header flex-space'>
      <span>Sign Up</span>
      <button class='overlay-exit' type='button'>x</button>
    </div>
    <div class='flex-space'>
      <input type="text" name="cook[name]" placeholder='User Name'>
      <input type="email" name="credentials[email]" placeholder='Email'>
    </div>
    <div class='flex-space'>
      <input type="password" name="credentials[password]" placeholder='Password'>
      <input type="password" name="credentials[password_confirmation]" placeholder='Password Confirmation'>
    </div>
    <input class='form-button' type="submit" value='Sign Up'>
    <h6 class='form-message'></h6>
  </form>
</div>
