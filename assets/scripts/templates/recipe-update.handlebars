<div class='overlay-background'>
  <form class='overlay-form recipe-update'>
    <div class='form-header flex-space'>
      <input type="text" name="recipe[name]" placeholder='Recipe Name' value='{{recipe.name}}'>
      <div class='overlay-buttons'>
        <button class='overlay-exit' type='button'>x</button>
      </div>
    </div>
    <div class='ingredients'>
      <h6>Ingredients:</h6>
      {{#each recipe.ingredients as |ingredient|}}
        {{> ingredient-form ingredient=ingredient }}
      {{/each}}
    </div>
    <!-- <button class='ingredient-add' type='button'>+</button> -->
    <div class='steps'>
      <h6>Steps:</h6>
      {{#each recipe.steps as |step|}}
        {{> step-form step=step }}
      {{/each}}
    </div>
    <!-- <button class='step-add' type='button'>+</button> -->
    <div class='form-footer form-button'>
      <input type="submit" value='Update Recipe'>
      <button class='show-recipe-delete' type='button'>Delete Recipe</button>
    </div>
    <h6 class='form-message'></h6>
  </form>
</div>
